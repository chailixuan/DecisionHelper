<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdditemsActivity">
    <ListView
        android:id="@+id/items_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/additems_bt"
        android:layout_marginBottom="10dp">
    </ListView>
    <Button
        android:id="@+id/additems_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="事件"
        android:textSize="25dp"
        android:textStyle="italic"
        android:background="@drawable/settingshape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/createnoe_bt"
        app:layout_constraintRight_toLeftOf="@+id/createnoe_bt"
        />
    <Button
        android:id="@+id/createnoe_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK!"
        android:textStyle="italic"
        android:textSize="25dp"
        android:background="@drawable/settingshape"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/additems_bt"
        android:layout_marginBottom="20dp"/>


</android.support.constraint.ConstraintLayout>