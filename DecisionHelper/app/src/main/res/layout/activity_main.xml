<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Decision Helper"
        android:textAllCaps="false"
        android:textSize="45dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@color/hotpink"
        android:background="@drawable/titleshape"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/addname_bt"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="添加事件和选项"
        android:textSize="17dp"
        android:textStyle="italic"
        android:gravity="center"
        android:background="@drawable/additemshape"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/history_bt"

        />
    <ImageButton
        android:id="@+id/history_bt"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_history"
        android:background="@drawable/historyshape"
        app:layout_constraintTop_toTopOf="@+id/addname_bt"
        app:layout_constraintLeft_toRightOf="@+id/addname_bt"
        app:layout_constraintRight_toLeftOf="@+id/hasnamed_bt"/>
    <ImageButton
        android:id="@+id/hasnamed_bt"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/hasnamedshape"
        android:src="@drawable/ic_hasnamed"
        app:layout_constraintTop_toTopOf="@+id/addname_bt"
        app:layout_constraintLeft_toRightOf="@+id/history_bt"
        app:layout_constraintRight_toLeftOf="@+id/setting_bt"/>
    <ImageButton
        android:id="@+id/setting_bt"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/settingshape"
        android:src="@drawable/ic_setting"
        app:layout_constraintTop_toTopOf="@+id/addname_bt"
        app:layout_constraintLeft_toRightOf="@+id/hasnamed_bt"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/main_bt1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/roundshape"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/addname_bt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="转盘决定" />


</android.support.constraint.ConstraintLayout>